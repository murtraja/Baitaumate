<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:picker="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.smb.murtraja.baitaumate.ConfigureLightActivity">

    <com.github.danielnilsson9.colorpickerview.view.ColorPickerView
        android:id="@+id/cpv_pickColour"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        picker:alphaChannelVisible="false" />

    <Button
        android:id="@+id/btn_setColour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Colour" />

    <TextView
        android:id="@+id/tv_commandStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

</LinearLayout>
