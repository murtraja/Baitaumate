<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smb.murtraja.baitaumate.MainActivity">

    <Button
        android:id="@+id/btn_configure_lights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="109dp"
        android:text="Configure Lights"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_wifi_mode_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wifi Mode Config"
        android:layout_alignBaseline="@+id/btn_configure_lights"
        android:layout_alignBottom="@+id/btn_configure_lights"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
